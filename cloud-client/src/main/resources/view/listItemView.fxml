<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="rootPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">

    <HBox alignment="CENTER" AnchorPane.leftAnchor="0">
        <Label id="name" text="Name" />
    </HBox>
    <HBox AnchorPane.rightAnchor="0">
        <children>
            <Label id="size" text="Size" />
            <ProgressBar id="progress" mouseTransparent="true" opacity="0.0" progress="0.0" style="-fx-padding: 0 0 0 5;" />
        </children>
    </HBox>


</AnchorPane>
