<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="rootPane" xmlns="http://javafx.com/javafx/8">

    <HBox alignment="CENTER" AnchorPane.leftAnchor="0">
        <Label id="name" text="Name" maxWidth="400"/>
    </HBox>
    <HBox AnchorPane.rightAnchor="0">
        <children>
            <ProgressBar id="progress" mouseTransparent="true" opacity="0.0" progress="0.0"
                         style="-fx-padding: 0 0 0 5;"/>
            <HBox alignment="CENTER_RIGHT" prefWidth="80">
                <Label id="size" text="Size" textAlignment="RIGHT" />
            </HBox>
        </children>
    </HBox>


</AnchorPane>
